<cimb.niaga.app.billsplit.corecycle.VerticalScrollview android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:nestedScrollingEnabled="true">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:text="Bills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textStyle="normal|bold|italic"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_bill">

            <ImageView
                android:background="@color/White"
                android:cropToPadding="true"
                android:id="@+id/img_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/sourcelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:text="Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textStyle="normal|bold|italic"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/newitem_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                </LinearLayout>
            </ScrollView>

            <TextView
                android:text="Extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="normal|bold|italic"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_marginTop="40dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Tax"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tax"
                    android:layout_weight="0.36" />

                <EditText
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTax"
                    android:layout_weight="7.60" />

                <TextView
                    android:text="%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:text="Service"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/service"
                    android:layout_weight="0.40" />

                <EditText
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editservice"
                    android:layout_weight="0.43" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </FrameLayout>

            <info.hoang8f.widget.FButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add New Item"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                fbutton:buttonColor="#952A3C"
                fbutton:shadowColor="#942B39"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp" />

        </LinearLayout>
    </LinearLayout>
</cimb.niaga.app.billsplit.corecycle.VerticalScrollview>